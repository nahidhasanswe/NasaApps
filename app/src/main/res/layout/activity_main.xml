<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nahid.nasaapps.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/world"
        android:paddingBottom="10dp"
        android:text="Worldwide CO2 increase responsible"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deforestation"
        android:layout_below="@+id/world"
        android:id="@+id/forestTxt"/>

    <ProgressBar
        android:id="@+id/forest"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/forestTxt"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal" />

    <TextView
        android:id="@+id/deforestText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/world"
        android:layout_alignEnd="@+id/forest"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Industry Waste"
        android:id="@+id/industryTxt"
        android:layout_below="@+id/forest"
        android:paddingTop="5dp"/>

    <ProgressBar
        android:id="@+id/industry"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/industryTxt"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal" />

    <TextView
        android:id="@+id/industryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/industry"
        android:layout_below="@+id/forest"
        android:paddingTop="7dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/industry"
        android:text="Agriculture Waste"
        android:paddingTop="5dp"
        android:id="@+id/agricultureTxt"/>

    <ProgressBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/agriculture"
        android:layout_below="@+id/agricultureTxt"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/agricultureText"
        android:layout_alignRight="@+id/industry"
        android:layout_below="@id/industry"
        android:paddingTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agriculture"
        android:text="Residiantial"
        android:paddingTop="5dp"
        android:id="@+id/residiantialTxt"/>

    <ProgressBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/residiantial"
        android:layout_below="@+id/residiantialTxt"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/residiantialText"
        android:layout_alignRight="@+id/industry"
        android:layout_below="@id/agriculture"
        android:paddingTop="10dp"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/residiantial"
        android:text="Water Waste"
        android:paddingTop="5dp"
        android:id="@+id/waterTxt"/>

    <ProgressBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/water"
        android:layout_below="@+id/waterTxt"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/waterText"
        android:layout_alignRight="@+id/residiantial"
        android:layout_below="@id/residiantial"
        android:paddingTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/water"
        android:text="Energy Supply Waste"
        android:paddingTop="5dp"
        android:id="@+id/energyTxt"/>

    <ProgressBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/energy"
        android:layout_below="@+id/energyTxt"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/energText"
        android:layout_alignRight="@+id/water"
        android:layout_below="@id/water"
        android:paddingTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/energy"
        android:text="Transport Waste"
        android:paddingTop="5dp"
        android:id="@+id/transportTxt"/>

    <ProgressBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/transport"
        android:layout_below="@+id/transportTxt"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/transportText"
        android:layout_alignRight="@+id/water"
        android:layout_below="@id/energy"
        android:paddingTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature Increase 0.87 degree Centregrate"
        android:layout_below="@+id/transport"
        android:paddingTop="15dp"
        android:textSize="25dp"
        android:id="@+id/increaseText"
        android:paddingBottom="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detect Location"
        android:id="@+id/detect"
        android:layout_below="@+id/increaseText"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>

